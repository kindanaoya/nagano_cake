<div class = "container">
  <div class="row">
    <h3 class="title">商品詳細</h3>
  </div>

  <div class="row">
    <div class="admin-item-info">
    	<div class="col-xs-5">
        <div class="item-info-image">
          <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
        </div>
      </div>
  
      <div class="col-xs-6">
      	<div class="info-content">
      		<p class="info-head">商品名</p>
      		<p class="item-info-text"><%= @item.name %></p>
      	</div>
      	<div class="info-content">
      		<p class="info-head">商品説明</p>
      		<p class="item-info-text"><%= @item.introduction %></p>
      	</div>
      	<div class="info-content">
      		<p class="info-head">ジャンル</p>
      		<p class="item-info-text"><%= @item.genre.name %></p>
      	</div>
      	<div class="info-content">
      		<p class="info-head">税込価格(税抜価格)</p>
      		<p class="item-info-text"><%= "#{(@item.price * 110 / 100).to_s(:delimited)}（#{@item.price.to_s(:delimited)}）" %>円</p>
      	</div>
      	<div class="info-content">
      		<p class="info-head">販売ステータス</p>
    			<% if @item.is_active == true %>
    				<p class="item-info-text">販売中</p>
    			<% else %>
    				<p class="item-info-text">売切れ</p>
    			<% end %>
      	</div>
  
      	<div class="actions text-right">
          <%= link_to "編集する", edit_admin_item_path, class: "btn-lg btn-primary" %>
        </div>
  		</div>
  	</div>
  </div>
</div>
