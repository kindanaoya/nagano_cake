<div class="row">
  <h3 class="title">ジャンル編集</h3>
</div>

<div class="row">
  <div class="genre-form">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, class: "form-control", style: "width: 250px;" %>
      <%= f.submit "変更を保存", class: "left-space btn btn-primary" %>
    <% end %>
  </div>
</div>