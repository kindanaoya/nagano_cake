<div class="row">
  <h3 class="title">ジャンル一覧・追加</h3>
</div>

<div class="row">
  <div class="genre-form">
		<%= form_with model: @genre, url: admin_genres_path do |f| %>
			<%= f.label :name, "ジャンル名", id: "genre-label" %>
			<%= f.text_field :name, class: "form-control", style: "width: 250px;" %>
			<%= f.submit "新規登録", class: "left-space btn btn-primary" %>
		<% end %>
	</div>

	<div class="col-xs-4">
		<table class="table">
			<thead>
				<tr>
					<th>ジャンル</th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
							<td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary left-space" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

</div>